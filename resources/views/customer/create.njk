{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Cashier
    </div>
{% endblock %}

{% block navSideBarList%}
    <li class="active">
        {{ linkToAction('CustomerController.index', '<i class="fa fa-fw fa-table"></i> Customer Data') }} 
    </li>
    <li>
        <a href="createTransaction.html"><i class="fa fa-fw fa-edit"></i>Create Transaction</a>
    </li>
{% endblock %}

{% block content %}
    <div class = "col-lg-12">
        {% if successMessage %}
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                <strong>Success!</strong> {{successMessage}}.
            </div>
        {% endif %}

        {% if old('errors') %}
            <div class="alert alert-danger alert-dismissable">
                {% for error in old('errors') %}
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <li> {{ error.message }} </li>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Create Customer</h3>
            </div>

            <div class="panel-body">                                   
                 {{ form.open({route: 'customer.store'}) }}

                    {{csrfField}}

                    <div class = "col-lg-12">

                        <div class="form-group ">
                            {{form.label('name','Name') }}
                            <div>
                                {{ form.text('name','',{ class: 'form-control'})}}
                            </div>
                        </div> 

                        <div class="form-group "> 
                            {{form.label('birth_date','Birth Date') }}
                            <div>
                                {{ form.date('birth_date','BirthDate',{ class: 'form-control'})}}
                            </div>
                        </div> 

                        <div class="form-group "> 
                            {{form.label('address','Address') }}
                            <div>
                                {{ form.text('address','',{ class: 'form-control'})}}
                            </div>
                        </div> 

                        <div class="form-group "> 
                            {{form.label('phone','Phone') }}
                            <div>
                                <input type="number" name="phone" class="form-control">
                            </div>
                        </div> 

                        <div class="form-group "> 
                            {{form.label('kis','KIS') }}
                            <div style="left:1rem">
                                <input type="checkbox" name="kis" >
                            </div>
                        </div> 

                        {{ form.submit('Create','submit', { class: 'btn btn-success', style: 'margin-top: 20px'}) }}

                    </div>    

                {{ form.close() }}  

            </div>

        </div>

    </div>

{% endblock %}