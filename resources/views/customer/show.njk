{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Cashier
    </div>
{% endblock %}

{% block navSideBarList%}
    <li class="active">
        {{ linkToAction('CustomerController.index', '<i class="fa fa-fw fa-table"></i> Customer Data') }} 
    </li>
    <li>
        {{ linkToAction('TransactionController.index', '<i class="fa fa-fw fa-edit"></i> Create Transaction') }} 
    </li>
    <li>
        {{ linkToAction('TransactionController.list', '<i class="fa fa-fw fa-edit"></i> New Transaction') }} 
    </li>
{% endblock %}

{% block content %}
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Customer</h3>
            </div>

            <div class="panel-body">                                   
                 <div class="col-lg-12">

                    <form class="form-horizontal">
                         <div class="form-group">
                            <label class="col-sm-2 control-label">Id</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{customer.id}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{customer.name}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Birth Date</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{customer.birth_date}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Address</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{customer.address}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Phone</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{customer.phone}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Kis</label>
                            <div class="col-sm-10">
                                {% if customer.kis == 1 %}
                                    <p class="form-control-static">Yes</p>
                                {% else %}
                                    <p class="form-control-static">No</p>
                                {% endif %}
                            </div>
                        </div>
                    </form>
                    
                </div>      
            </div>

        </div>

        {{ form.open({ route: 'customer.edit', params: {id: customer.id} }) }}
            {{ form.button('Update','', { class: 'btn btn-success ',  style:'float:left;'}) }}
        {{ form.close() }}

        {{ form.open({ route: 'customer.destroy', params: {id: customer.id} }) }}
            {{csrfField}}
            {{ form.button('Delete','', { class: 'btn btn-danger ',style:'margin-left:20px' }) }} 
        {{ form.close() }}

    </div>

{% endblock %}