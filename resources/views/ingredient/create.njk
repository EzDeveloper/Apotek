{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Pharmacist
    </div>
{% endblock %}

{% block navSideBarList%}
    <li class="active">
        {{ linkToAction('StockController.index', '<i class="fa fa-fw fa-leaf"></i> Ingredient') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-medkit"></i> Sales Report') }} 
    </li>
{% endblock %}

{% block content %}
    <div class = "col-lg-12">
        {% if successMessage %}
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                <strong>Success!</strong> {{successMessage}}.
            </div>
        {% endif %}

        {% if old('errors') %}
            <div class="alert alert-danger alert-dismissable">
                {% for error in old('errors') %}
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <li> {{ error.message }} </li>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-12">

        <div class="panel panel-default" style="position:relative">

            <div class="panel-heading">
                <h3 class="panel-title">Medicine</h3>
            </div>

            <div class="panel-body">                                   
                 
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 style control-label">Medicine Name</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">{{medicine.name}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 style control-label">Medicine Price</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">{{medicine.price}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="position:relative;">
            <div class="form-group" style="width:55%; margin-right:2%; position:absolute; left:0">
                 <div class="panel panel-default"> 
                    <div class="panel-heading">
                        <h3 class="panel-title">Current Ingredients</h3>
                    </div>

                    <div class="panel-body">                                   
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for ingredient in ingredients  %}
                                        <tr>
                                            <td>{{ingredient.Stock.name}}</td>
                                            <td>{{ingredient.amount}}</td>
                                            <td>{{ingredient.price}}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group" style="width:42.5%;position:absolute;right:0">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Select Ingredient</h3>
                    </div>

                    <div class="panel-body">    

                        {{ form.open({action: 'IngredientController.store', params: {id: medicine.id} }) }}

                            {{csrfField}}                               
                         
                            <div class="form-horizontal">
                                <div class="col-lg-12">
                                    <div class="form-group" > 
                                        {{form.label('stock.id','Select Ingredient') }}
                                        <div>
                                            <select name="stock_id" class="form-control" >
                                                {% for stock in stocks %}
                                                    <option value={{ stock.id }}>{{ stock.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-lg-12">
                                    <div class="form-group "> 
                                        {{form.label('amount','Amount') }}
                                        <div>
                                            <input type="number" name="amount" class="form-control">
                                        </div>
                                    </div> 
                                </div> 

                                {{ form.submit('Add','add', { class: 'btn btn-success', style: 'margin-top: 20px'}) }}
                            </div>

                        {{ form.close() }}  

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}