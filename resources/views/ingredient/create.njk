{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Pharmacist
    </div>
{% endblock %}

{% block navSideBarList%}
    <li class="active">
        {{ linkToAction('StockController.index', '<i class="fa fa-fw fa-leaf"></i> Ingredient') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-medkit"></i> Sales Report') }} 
    </li>
{% endblock %}

{% block content %}
    <div class = "col-lg-12">
        {% if successMessage %}
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                <strong>Success!</strong> {{successMessage}}.
            </div>
        {% endif %}

        {% if old('errors') %}
            <div class="alert alert-danger alert-dismissable">
                {% for error in old('errors') %}
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <li> {{ error.message }} </li>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Create Ingredients</h3>
            </div>

            <div class="panel-body">                                   
                 {{ form.open({action: 'IngredientController.store'}) }}

                    {{csrfField}}

                    <div class = "col-lg-12">

                        <div class="form-group "> 
                            {{form.label('stock_id','Ingredient') }}
                            <div>
                                <select name="stock_id" class="form-control">
                                    {% for ingredient in ingredients %}
                                        <option value={{ ingredient.id }}>{{ ingredient.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div> 
                        <div class="form-group "> 
                            {{form.label('amount','Amount') }}
                            <div>
                                <input type="number" name="amount" class="form-control">
                            </div>
                        </div> 

                        {{ form.submit('Create','submit', { class: 'btn btn-success', style: 'margin-top: 20px'}) }}

                    </div>    

                {{ form.close() }}  

            </div>

        </div>

    </div>

{% endblock %}