{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Admin
    </div>
{% endblock %}

{% block navSideBarList%}
    <li >
       {{ linkToAction('UserController.index', '<i class="fa fa-fw fa-group"></i> User') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-wrench"></i> Role') }} 
    </li>
    <li class="active">
        {{ linkToAction('StockController.index', '<i class="fa fa-fw fa-file"></i> Medicine Stock') }} 
    </li>
    <li>
        {{ linkToAction('TransactionController.sales', '<i class="fa fa-fw fa-medkit"></i> Sales Report') }} 
    </li>
{% endblock %}

{% block content %}
    <div class = "col-lg-12">
        {% if successMessage %}
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                <strong>Success!</strong> {{successMessage}}.
            </div>
        {% endif %}

        {% if old('errors') %}
            <div class="alert alert-danger alert-dismissable">
                {% for error in old('errors') %}
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <li> {{ error.message }} </li>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Create New Ingredient</h3>
            </div>

            <div class="panel-body">                                   
                 {{ form.open({route: 'stock.store'}) }}

                    {{csrfField}}

                    <div class = "col-lg-12">

                        <div class="form-group ">
                            {{form.label('name','Name') }}
                            <div>
                                {{ form.text('name','',{ class: 'form-control'})}}
                            </div>
                        </div> 

                        <div class="form-group "> 
                            {{form.label('storage_amount','Amount') }}
                            <div>
                                {{ form.text('storage_amount','',{ class: 'form-control'})}}
                            </div>
                        </div> 

                        <div class="form-group "> 
                            {{form.label('price','Price') }}
                            <div>
                                {{ form.text('price','',{ class: 'form-control'})}}
                            </div>
                        </div> 

                        {{ form.submit('Create','submit', { class: 'btn btn-success', style: 'margin-top: 20px'}) }}

                    </div>    

                {{ form.close() }}  

            </div>

        </div>

    </div>

{% endblock %}