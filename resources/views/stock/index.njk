{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Admin
    </div>
{% endblock %}

{% block navSideBarList%}
    <li>
       {{ linkToAction('UserController.index', '<i class="fa fa-fw fa-group"></i> User') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-wrench"></i> Role') }} 
    </li>
    <li class="active">
        {{ linkToAction('StockController.index', '<i class="fa fa-fw fa-file"></i> Medicine Stock') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-medkit"></i> Sales Report') }} 
    </li>
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Storage</h3>
            </div>

            <div class="panel-body">                                   
                 <div class="col-lg-12">
                    {{ form.open({action: 'StockController.create'}) }}
                        {{ form.button('Create','', { class: 'btn btn-success', style: 'margin-bottom: 20px'}) }}
                    {{ form.close() }}

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Amount (mg)</th>
                                    <th>Price (Rp/mg)</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                {%for stock in stocks %}
                                    <tr>
                                        <td>{{stock.id}}</td>
                                        <td>{{stock.name}}</td>
                                        <td>{{stock.storage_amount}}
                                            <a href="stock/{{stock.id}}/add" style="margin-left:60%">
                                                <button type="button" class="btn btn-success" style="font-color:#000;font-size:18px">
                                                    +
                                                </button>
                                            </a>
                                        </td>
                                        <td>{{stock.price}}</td>
                                        <td><a href="stock/{{stock.id}}">View</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>                          
            </div>

        </div>

    </div>
{% endblock %}