{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Admin
    </div>
{% endblock %}

{% block navSideBarList%}
    <li>
       {{ linkToAction('UserController.index', '<i class="fa fa-fw fa-group"></i> User') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-wrench"></i> Role') }} 
    </li>
    <li class="active">
        {{ linkToAction('StockController.index', '<i class="fa fa-fw fa-file"></i> Medicine Stock') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-medkit"></i> Sales Report') }} 
    </li>
{% endblock %}

{% block content %}
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Ingredient Stock</h3>
            </div>

            <div class="panel-body">                                   
                 <div class="col-lg-12">

                    <form class="form-horizontal">
                         <div class="form-group">
                            <label class="col-sm-2 control-label">Stock ID</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{stock.id}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{stock.name}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Amount</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{stock.storage_amount}}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">Price</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{stock.price}}</p>
                            </div>
                        </div>

                    </form>
                    
                </div>      
            </div>

        </div>

        {{ form.open({ route: 'stock.edit', params: {id: stock.id} }) }}
            {{ form.button('Update','', { class: 'btn btn-success ',  style:'float:left;'}) }}
        {{ form.close() }}

        {{ form.open({ route: 'stock.destroy', params: {id: stock.id} }) }}
            {{csrfField}}
            {{ form.button('Delete','', { class: 'btn btn-danger ',style:'margin-left:20px' }) }} 
        {{ form.close() }}

    </div>

{% endblock %}