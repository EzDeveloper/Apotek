{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Cashier
    </div>
{% endblock %}

{% block navSideBarList%}
    <li>
        {{ linkToAction('CustomerController.index', '<i class="fa fa-fw fa-table"></i> Customer Data') }} 
    </li>
    <li class="active">
        {{ linkToAction('TransactionController.index', '<i class="fa fa-fw fa-edit"></i> Create Transaction') }} 
    </li>
{% endblock %}

{% block content %}
    <div class = "col-lg-12">
        {% if successMessage %}
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                <strong>Success!</strong> {{successMessage}}.
            </div>
        {% endif %}

        {% if old('errors') %}
            <div class="alert alert-danger alert-dismissable">
                {% for error in old('errors') %}
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <li> {{ error.message }} </li>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-12">

        <div class="panel panel-default" style="position:relative">

            <div class="panel-heading">
                <h3 class="panel-title">Transaction</h3>
            </div>

            <div class="panel-body">                                   
                 
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 style control-label">Medicine Name</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">{{medicine.name}}</p>
                        </div>
                        <label class="col-sm-2 style control-label">Total Price</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">Rp. {{medicine.price}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="position:relative;">
            <div class="form-group" style=" width:100%;position:absolute; left:0">
                 <div class="panel panel-default"> 
                    <div class="panel-heading">
                        <h3 class="panel-title">Current Ingredients</h3>
                    </div>

                    <div class="panel-body">                                   
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Sub Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for ingredient in ingredients  %}
                                        <tr>
                                            <td>{{ingredient.stock.name}}</td>
                                            <td>{{ingredient.amount}}</td>
                                            <td>Rp. {{ingredient.price}}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}