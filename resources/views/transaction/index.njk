{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Cashier
    </div>
{% endblock %}

{% block navSideBarList%}
    <li>
        {{ linkToAction('CustomerController.index', '<i class="fa fa-fw fa-table"></i> Customer Data') }} 
    </li>
    <li class="active">
        {{ linkToAction('TransactionController.index', '<i class="fa fa-fw fa-edit"></i> Create Transaction') }} 
    </li>
    <li>
        {{ linkToAction('TransactionController.list', '<i class="fa fa-fw fa-edit"></i> New Transaction') }} 
    </li>
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Storage</h3>
            </div>

            <div class="panel-body">                                   
                 <div class="col-lg-12">

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Customer</th>
                                    <th>User</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                {%for transaction in transactions %}
                                    <tr style="height:45px">
                                        <td>{{transaction.id}}</td>
                                        <td>{{transaction.customer.name}}</td>
                                        <td>{{transaction.user.name}}</td>
                                        <td>{{transaction.total_price}}</td>
                                        {% if transaction.status == 1 %}
                                            <td>Paid</td>
                                        {% else %}
                                            <td>Unpaid</td>
                                        {% endif %}   
                                        <td><a href="transaction/detail/{{transaction.id}}">View</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>                          
            </div>

        </div>

    </div>
{% endblock %}