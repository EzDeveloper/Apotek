{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Cashier
    </div>
{% endblock %}

{% block navSideBarList%}
    <li>
        {{ linkToAction('CustomerController.index', '<i class="fa fa-fw fa-table"></i> Customer Data') }} 
    </li>
    <li class="active">
        {{ linkToAction('TransactionController.index', '<i class="fa fa-fw fa-edit"></i> Create Transaction') }} 
    </li>
    <li class="active">
        {{ linkToAction('TransactionController.list', '<i class="fa fa-fw fa-edit"></i> New Transaction') }} 
    </li>
{% endblock %}

{% block content %}
    <div class = "col-lg-12">

        {% if old('errors') %}
            <div class="alert alert-danger alert-dismissable">
                {% for error in old('errors') %}
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <li> {{ error.message }} </li>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">New Transaction List</h3>
            </div>

            <div class="panel-body">    
                {{ form.open({action: 'TransactionController.create'}) }}
                    {{ form.button('Create','', { class: 'btn btn-success', style: 'margin-bottom: 20px'}) }}
                {{ form.close() }}
                               
                 {{ form.open({action: 'TransactionController.store'}) }}

                    {{csrfField}}
                    
                    <div class="form-group "> 
                        {{form.label('user_id','Cashier') }}
                        <div>
                            <select name="user_id" class="form-control">
                                {% for user in users %}
                                    <option value={{ user.id }}>{{ user.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div> 

                    <div class="form-group "> 
                        {{form.label('customer_id','Customer') }}
                        <div>
                            <select name="customer_id" class="form-control">
                                {% for customer in customers %}
                                    <option value={{ customer.id }}>{{ customer.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div> 

                    {{ form.submit('Create','submit', { class: 'btn btn-success', style: 'margin-top: 20px'}) }}

                {{ form.close() }}  

            </div>

        </div>

    </div>

{% endblock %}