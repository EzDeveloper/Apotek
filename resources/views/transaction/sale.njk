{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Admin
    </div>
{% endblock %}

{% block navSideBarList%}
    <li >
       {{ linkToAction('UserController.index', '<i class="fa fa-fw fa-group"></i> User') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-wrench"></i> Role') }} 
    </li>
    <li>
        {{ linkToAction('StockController.index', '<i class="fa fa-fw fa-file"></i> Medicine Stock') }} 
    </li>
    <li class="active">
        {{ linkToAction('TransactionController.sales', '<i class="fa fa-fw fa-medkit"></i> Sales Report') }} 
    </li>
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Users</h3>
            </div>

            <div class="panel-body">                                   
                 <div class="col-lg-12">

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Birth Date</th>
                                    <th>Phone</th>
                                    <th>E-mail</th>
                                    <th>Role</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                {%for user in users %}
                                    <tr>
                                        <td>{{user.id}}</td>
                                        <td>{{user.name}}</td>
                                        <td>{{user.birth_date}}</td>
                                        <td>{{user.phone}}</td>
                                        <td>{{user.email}}</td>
                                        <td>{{user.role.name}}</td>
                                        <td><a href="user/{{user.id}}">View</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>                          
            </div>

        </div>

    </div>
{% endblock %}