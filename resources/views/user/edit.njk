{% extends 'base' %}

{% block navBarRole%}
    <div class="navbar-brand" >
        Admin
    </div>
{% endblock %}

{% block navSideBarList%}
    <li class="active">
       {{ linkToAction('UserController.index', '<i class="fa fa-fw fa-group"></i> User') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-wrench"></i> Role') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-file"></i> Medicine Stock') }} 
    </li>
    <li>
        {{ linkToAction('RoleController.index', '<i class="fa fa-fw fa-medkit"></i> Sales Report') }} 
    </li>
{% endblock %}

{% block content %}
    <div class = "col-lg-12">
        {% if successMessage %}
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                <strong>Success!</strong> {{successMessage}}.
            </div>
        {% endif %}

        {% if old('errors') %}
            <div class="alert alert-danger alert-dismissable">
                {% for error in old('errors') %}
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <li> {{ error.message }} </li>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Role</h3>
            </div>

             {{ form.open({route: 'user.update', params: {id:user[0].id} }) }}

                    {{csrfField}}
                        <div class="panel-body">          
                                                         
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">User ID</label>
                                    <div class="col-sm-10">
                                        <p class="form-control-static">{{user[0].id}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Username</label>
                                    <div class="col-sm-10">
                                        <p class="form-control-static">{{user[0].email}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Role Id</label>
                                    <div class="col-sm-10">
                                        <select name="role_id" class="form-control">
                                            {% for role in roles %}
                                                {% if user[0].role_id == role.id %}
                                                    <option value={{ role.id }} selected="selected">{{ role.name }}</option>
                                                {% else %}
                                                    <option value={{ role.id }}>{{ role.name }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">
                                        {{ form.text('name',  user[0].name  , { class: 'form-control'}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Birth Date</label>
                                    <div class="col-sm-10">
                                        <p class="form-control-static">{{user[0].birth_date}}</p>
                                        {{ form.date('birth_date',  user[0].birth_date  , { class: 'form-control'}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Address</label>
                                    <div class="col-sm-10">
                                        {{ form.text('address',  user[0].address  , { class: 'form-control'}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Phone</label>
                                    <div class="col-sm-10">
                                        {{ form.text('phone',  user[0].phone  , { class: 'form-control'}) }}
                                    </div>
                                </div>
                            </div>    
                                    
                        </div>
                    </div>

                 {{ form.button('Update','', { class: 'btn btn-success ', style: 'margin-top: 20px'}) }}
            {{ form.close() }}

    </div>

{% endblock %}